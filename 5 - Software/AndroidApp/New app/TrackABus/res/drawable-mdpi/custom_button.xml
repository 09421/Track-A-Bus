<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#820F12"/>
           	<stroke
           	    android:width="1dp"
           	    android:color="#ffffff"/>
           	<corners
           	    android:radius="3dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#820F12"
                android:endColor="#BC171D"
                android:angle="90"/>
           	<stroke
           	    android:width="1dp"
           	    android:color="#ffffff"/>
           	<corners
           	    android:radius="3dp"/>           
        </shape>
    </item>
</selector>
